{
  "name": "vscode-ext-show-translation",
  "displayName": "Show translation in editor",
  "description": "Show translation in editor from json data",
  "keywords": [
    "translate",
    "i18n",
    "internationalization",
    "typescript",
    "html",
    "vscode-extension"
  ],
  "publisher": "tranquangkhuong",
  "homepage": "https://github.com/tranquangkhuong/vscode-ext-show-translation",
  "author": {
    "name": "Tran Quang Khuong",
    "email": "khuongtran.it@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tranquangkhuong/vscode-ext-show-translation.git"
  },
  "icon": "images/icon.png",
  "license": "MIT",
  "version": "0.0.2",
  "engines": {
    "vscode": ">=1.90.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Extension Packs",
    "Language Packs"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:html"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-ext-show-translation.helloWorld",
        "title": "Hello World"
      }
    ],
    "hoverProvider": [
      {
        "language": "typescript",
        "provider": true
      },
      {
        "language": "html",
        "provider": true
      }
    ],
    "completionItemProvider": [
      {
        "language": "typescript",
        "triggerCharacters": [
          "."
        ],
        "provideCompletionItems": true
      },
      {
        "language": "html",
        "triggerCharacters": [
          "."
        ],
        "provideCompletionItems": true
      }
    ],
    "definitionProvider": [
      {
        "language": "typescript"
      },
      {
        "language": "html"
      }
    ]
  },
  "scripts": {
    "build": "node build.js",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": ">=1.90.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}